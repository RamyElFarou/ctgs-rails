<div class ='row' style='margin-top:10px;'>
    <div class = 'col-xs-12'> <!-- Spans all 12 columns of the grid -->
      <%= form_for(@grant_application, :html => {class: "form-horizontal", roll: "form"}) do |f| %>
      
      <!-- Collect conference ID -->
      <div class = "form-group">       
          <div class = "control-label col-sm-2">
            <%= f.label :conference_id %>
          </div>
          <div class = "col-sm-8">
             <%= f.text_field :conference_id, class: "form-control", placeholder: "Enter the Conference ID", autofocus:true %>
          </div>
      </div>
      
      <div class = "form-group">    
        <div class ="col-sm-offset-5 col-sm-10">
           <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      
    </div>
    <% end %>
</div>

<!-- Display conferences with ID -->

<div class='row'>
  <% @conferences.each do |conf| %>
    <div class="col-md-4">
      <a href="#" class="thumbnail">
        
        <% if conf.id == 1 %>
          <%= image_tag "science.png" %>
        <% elsif conf.id == 2 %>
          <%= image_tag "cloud.png" %>
        <% else %>
          <%= image_tag "nasa.png" %>
        <% end %>
        
        <h2 align="center"><%= conf.name %></h2>
        <h4 align="center">Conference ID: <%= conf.id %></h4>
      </a>
    </div>
  <% end %>
</div>