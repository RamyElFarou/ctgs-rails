<div class ='row'>
    <div class = 'col-xs-12'> <!-- Spans all 12 columns of the grid -->
      <%= form_for(@grant_application, :html => {class: "form-horizontal", roll: "form"}) do |f| %>
      
      <!-- Collect conference ID -->
      <div class = "form-group">       
          <div class = "control-label col-sm-2">
            <%= f.label :conference_id %>
          </div>
          <div class = "col-sm-8">
             <%= f.text_field :conference_id, class: "form-control", placeholder: "Enter the Conference ID", autofocus:true %>
          </div>
      </div>
      
      <!-- Collect Student ID -->
      <div class = "form-group">      <!-- form for description -->
          <div class = "control-label col-sm-2">
            <%= f.label :student_id %>
          </div>
          <div class = "col-sm-8">
              <%= f.text_field :student_id, class: "form-control", placeholder: "Enter Student ID", autofocus:true%>
          </div>
      </div>
      
      <div class = "form-group">     <!-- form for button -->
        <div class ="col-sm-offset-5 col-sm-10">
           <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      
    </div>
    <% end %>
</div>