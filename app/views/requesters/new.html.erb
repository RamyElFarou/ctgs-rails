
  <%= form_for(@requester) do |f| %>
  

      
      <div class = "form-group">       <!-- form for title -->
          <div class = "control-label col-sm-2">
            <%= f.label :supervisor %>
          </div>
          <div class = "col-sm-8">
             <%= f.text_field :supervisor_id, class: "form-control", placeholder: "Enter supervisor ID", autofocus:true %>
          </div>
      </div>
      
      <div class = "form-group">       <!-- form for title -->
          <div class = "control-label col-sm-2">
            <%= f.label :student %>
          </div>
          <div class = "col-sm-8">
             <%= f.text_field :student_id, class: "form-control", placeholder: "Enter student ID", autofocus:true %>
          </div>
      </div>
     
     


      <div class = "form-group">     <!-- form for button -->
        <div class ="col-sm-offset-5 col-sm-10">
           <%= f.submit(@requester.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
      <% end %>
    </div>
  </div>